<h1>Lista de Todos</h1>

<ul>
  <% @todos.each do |todo| %>
    <li>
      <span><%= todo.description %></span>
      <%= link_to "Ver", todo_path(todo.id) %>
      <%= link_to "Edit", edit_todo_path(todo.id) %>
      <%= link_to "Delete", todo_path(todo.id), method: :delete, confirm: "Are you sure?" %>
    </li>
  <% end %>
</ul>

<%= link_to "Novo Todo", new_todo_path %>
